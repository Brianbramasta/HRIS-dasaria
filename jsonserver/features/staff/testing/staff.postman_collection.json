{
  "info": {
    "name": "HRIS - Staff Feature API",
    "description": "Koleksi Postman untuk pengujian endpoint fitur Staff (staff, education, documents, pengunduran-diri, perpanjangan-kontrak, riwayat-organisasi). Menggunakan {{baseUrl}} dan {{token}}.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "token", "value": "" },
    { "key": "staffId", "value": "staff-1" },
    { "key": "educationId", "value": "edu-1" },
    { "key": "documentId", "value": "doc-1" },
    { "key": "resignId", "value": "resign-1" },
    { "key": "extensionId", "value": "ext-1" },
    { "key": "historyId", "value": "hist-1" },
    { "key": "company", "value": "Company A" },
    { "key": "department", "value": "Department A" },
    { "key": "status", "value": "Active" }
  ],
  "item": [
    {
      "name": "Staff",
      "item": [
        {
          "name": "GET /staff (list)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/api/staff?search=&company={{company}}&department={{department}}&status={{status}}&sortBy=updated_at&order=desc&page=1&limit=10"
          }
        },
        {
          "name": "GET /staff/:id/detail",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/api/staff/{{staffId}}/detail"
          }
        },
        {
          "name": "POST /staff",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"idKaryawan\": \"EMP-0001\",\n  \"name\": \"Nama Karyawan\",\n  \"email\": \"employee@example.com\",\n  \"tanggalJoin\": \"2024-01-01\",\n  \"company\": \"Company A\",\n  \"office\": \"Office A\",\n  \"departement\": \"Department A\",\n  \"divisi\": \"Division A\",\n  \"jabatan\": \"Jabatan A\",\n  \"posisi\": \"Posisi A\",\n  \"grade\": \"Senior\",\n  \"status\": \"Active\"\n}"
            },
            "url": "{{baseUrl}}/api/staff"
          }
        },
        {
          "name": "PATCH /staff/:id",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"employee.updated@example.com\",\n  \"status\": \"Inactive\"\n}"
            },
            "url": "{{baseUrl}}/api/staff/{{staffId}}"
          }
        },
        {
          "name": "DELETE /staff/:id",
