            "body": {
              "mode": "raw",
              "raw": "{\n  \"namaLembaga\": \"Universitas Contoh\",\n  \"nilaiPendidikan\": \"3.8\",\n  \"jurusanKeahlian\": \"Informatika\",\n  \"tahunLulus\": \"2020\"\n}"
            },
            "url": "{{baseUrl}}/api/staff/{{staffId}}/education"
          }
        },
        {
          "name": "PATCH /staff/:id/education/:educationId",
          "request": {
            "method": "PATCH",
